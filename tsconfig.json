{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/content/user/AddUserModal.jsx",
    "src/app/content/Libraries/knowledgeTax.jsx",
    "src/app/content/Libraries/BehaviourTaxo.jsx",
    "src/app/content/Libraries/AbilityTaxo.jsx",
    "src/app/content/Libraries/AttitudeTaxo.jsx",
    "src/app/content/skill-library/page.tsx",
    "src/app/content/HRMS/Payroll/PayrollTypeDialog.jsx",
    "src/app/content/organization-profile-management/profile.jsx",
    "src/app/content/Reports/employee/EmployeeDirectory.jsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
